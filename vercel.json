{
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "^/assets/(.*)",
            "dest": "/assets/$1",
            "headers": {
                "content-type": "application/javascript"
            }
        },
        {
            "src": "/(.*)\\.(js|css|png|jpg|jpeg|svg|ico|json)",
            "dest": "/$1.$2"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}